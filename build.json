{
  "environment": "development",
  "testdata": true,
  "frontend": {
    "build": true,
    "minify": true
  },
  "backend": {
    "build": true,
    "run_migrations": true
  },
  "docker": {
    "use_compose": true,
    "compose_file": "docker-compose.yml"
  },
  "logging": {
    "enabled": true,
    "log_file": "build_and_deploy.log"
  },
  "paths": {
    "backend": "backend/",
    "frontend": "frontend/",
    "buildScripts": "build/scripts/",
    "database": "database/",
    "logs": "logs/",
    "dockerComposeFile": "docker-compose.yml"
  },
  "constants": {
    "maxRetries": 5,
    "retryDelay": 10000
  },
  "network": {
    "subnet": "192.168.1.0/24",
    "host": "192.168.1.1"
  }
}