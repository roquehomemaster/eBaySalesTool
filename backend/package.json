{
  "name": "ebay-sales-tool-backend",
  "version": "1.0.0",
  "description": "Backend for eBay sales tool to assist in selling and tracking items on eBay.",
  "main": "src/app.js",
  "scripts": {
    "start": "node --max-old-space-size=4096 src/app.js",
    "dev": "nodemon --exec 'node --max-old-space-size=4096' src/app.js",
    "prepare-lock": "npm install --package-lock-only",
    "test": "jest --runInBand --detectOpenHandles=false",
  "test:detect-open-handles": "jest --runInBand --detectOpenHandles --maxWorkers=1",
    "build": "echo No build step required",
    "lint": "eslint src --ext .js"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "dotenv": "^16.5.0",
    "ebay-sales-tool-backend": "file:",
    "ebaysalestool": "file:..",
    "express": "^5.1.0",
    "mongoose": "^8.13.2",
    "pg": "^8.16.2",
    "sequelize": "^6.32.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.10.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^2.0.7",
    "supertest": "^7.1.1",
    "eslint": "^8.57.0"
  },
  "author": "Your Name",
  "license": "MIT",
  "services": {
    "backend": {
      "build": {
        "context": ".",
        "dockerfile": "./Dockerfile"
      },
      "ports": [
        "5000:5000"
      ],
      "volumes": [
        "./backend:/app",
        "/app/node_modules"
      ],
      "environment": [
        "NODE_ENV=development"
      ]
    },
    "frontend": {
      "build": {
        "context": "./frontend",
        "dockerfile": "./Dockerfile"
      },
      "ports": [
        "3000:3000"
      ],
      "volumes": [
        "./frontend:/app",
        "/app/node_modules"
      ],
      "environment": [
        "REACT_APP_API_URL=http://localhost:5000"
      ]
    }
  },
  "keywords": []
}
